<div class="row">
  <div class="col-12">
    <h2>
      <%= @user.username %>'s Profile
      <div class="float-right">
        <% if logged_in? %>
          <% if @user == current_user %>
            <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'btn btn-primary' %>
            <%= link_to 'Delete Account', current_user, method: :delete, class: 'btn btn-danger' %>
            <% end %>
        <% end %>
      </div>
    </h2>
  </div>
</div>

<br>

<div class="row">
  <div class="col-lg-8 order-1 order-lg-2">
    <% if current_user == @user %>
      <div class="clearfix">
        <%= render 'subreddits/form', subreddit: @subreddit %>
      </div>
    <br>
    <% end %>

    <% if @user.subreddits.empty? %>
      <p class="text-center"><%= @user.username %> doesn't have any subreddits yet.</p>
    <% else %>
      <% @user.subreddits.each do |subreddits| %>
        <%= render 'subreddits/subreddit', subreddit: subreddit %>
        <br>
      <% end %>
    <% end %>
  </div>
</div>
