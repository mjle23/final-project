<h1>Users</h1>

<table class="table table-light">
  <thead>
    <tr>
      <th class="table-dark bg-primary">Username</th>
      <th class="table-dark bg-primary">Email</th>
      <th class="table-dark bg-primary" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <% if logged_in? && current_user == user %>
          <td><%= link_to 'Edit Profile', edit_user_path(user) %></td>
          <td><%= link_to 'Delete Account', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
